<UserControl x:Class="ModuleMobile.Views.MobileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModuleMobile.Views"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True" >

    <Grid>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="5 20 0 0">
            <Grid>
                <Border CornerRadius="4" 
                    Background="White" 
                    Height="50" 
                    Width="50"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="10 0 0 0"
                    Opacity="0.4">
                </Border>
                <Border CornerRadius="4" 
                    Background="Transparent" 
                    Height="50" 
                    Width="50"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="10 0 0 0"
                    Opacity="1"
                    BorderThickness="1"
                    BorderBrush="White">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="4" 
                                      Direction="270" 
                                      Opacity="0.625" 
                                      BlurRadius="6"/>
                    </Border.Effect>
                </Border>
                <Image Source="{DynamicResource MobileIcon}"
                   Height="30"
                   Width="20"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="25 8 0 0">
                    <Image.Effect>
                        <DropShadowEffect ShadowDepth="1" 
                                      Direction="270" 
                                      Opacity="0.625" 
                                      BlurRadius="6"/>
                    </Image.Effect>
                </Image>
            </Grid>
            <TextBlock Text="{DynamicResource m_MobileButton}"
                       TextWrapping="WrapWithOverflow"
                       MaxWidth="100"
                       VerticalAlignment="Center"
                               Margin="10 0 0 0"
                               Foreground="White"
                               FontSize="15"/>
        </StackPanel>
        <Border CornerRadius="4" 
                Background="White"
                Margin="0 30 0 0"
                Height="150" 
                Width="150"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Opacity="0.4">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4" 
                                  Direction="270" 
                                  Opacity="0.625" 
                                  BlurRadius="6"/>
            </Border.Effect>
        </Border>
        <Image x:Name="QR"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Height="130"
               Margin="0 30 0 0"
               Visibility="{Binding QRVisibility}"/>
    </Grid>
</UserControl>
