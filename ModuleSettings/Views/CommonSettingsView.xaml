<UserControl x:Class="ModuleSettings.Views.CommonSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModuleSettings.Views"
            xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:Height="300"
             d:Width="200"
             mc:Ignorable="d" >
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="5 40 0 0">
                <Grid>
                    <Border CornerRadius="4" 
                    Background="White" 
                    Height="65" 
                    Width="65"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="10 0 0 0"
                    Opacity="0.4">
                    </Border>
                    <Border CornerRadius="4" 
                    Background="Transparent" 
                    Height="65" 
                    Width="65"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="10 0 0 0"
                    Opacity="1"
                    BorderThickness="1"
                    BorderBrush="White">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="4" 
                                      Direction="270" 
                                      Opacity="0.625" 
                                      BlurRadius="6"/>
                        </Border.Effect>
                    </Border>
                    <Image Source="{DynamicResource CommonIcon}"
                   Height="50"
                   Width="50"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="17 15 0 0">
                        <Image.Effect>
                            <DropShadowEffect ShadowDepth="1" 
                                      Direction="270" 
                                      Opacity="0.625" 
                                      BlurRadius="6"/>
                        </Image.Effect>
                    </Image>
                </Grid>
                <TextBlock Text="{DynamicResource m_CommonButton}"
                       TextWrapping="WrapWithOverflow"
                       MaxWidth="100"
                       VerticalAlignment="Center"
                               Margin="25 0 0 0"
                               Foreground="White"
                               FontSize="15"/>
            </StackPanel>
            <StackPanel Orientation="Vertical"
                        Margin="20 30 0 0">
                <CheckBox IsThreeState="False" 
                          IsChecked="{Binding AutostartSwitcher}"
                          Content="{DynamicResource m_Autostart}"
                          Style="{DynamicResource CommonCheckBox}"
                          Foreground="White"
                          Margin="0 0 0 10"/>
                <CheckBox IsThreeState="False" 
                          IsChecked="{Binding SecondSwitcher}"
                          Content="{DynamicResource m_ShowSeconds}"
                          Style="{DynamicResource CommonCheckBox}"
                          Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
